<div class="dashdiv">
    <a href="/dashboard">Back</a>
    <span class="signup-form-title">
        STUDENT REGISTRATION FORM
    </span>
    <form method="post" class="formdiv m-0" id="studentForm">

        <table border="0" id="demotable">

            <tr>
                <td class="tdlabel"><label for="fname">First Name</label></td>
                <td><input type="text" name="fname" id="fname" maxlength="30" /> (max 30 characters a-z and A-Z)</td>

            </tr>
            <tr>
                <td class="tdlabel"><label for="lname">Last Name</label></td>
                <td><input type="text" name="lname" id="lname" maxlength="30" /> (max 30 characters a-z and A-Z)</td>

            </tr>

            <tr>
                <td class="tdlabel"><label for="semail">Email</label></td>
                <td><input type="text" name="semail" id="semail" maxlength="100" /></td>
            </tr>
            <tr>
                <td class="tdlabel"><label for="sphone">Contact No.</label></td>
                <td><input type="text" name="sphone" id="sphone" maxlength="10" /> (10 digit number)</td>
            </tr>
            <tr>
                <td class="tdlabel"><label for="saddress">Address</label></td>
                <td><textarea name="saddress" rows="4" cols="30" id="saddress"></textarea></td>
                </td>
                </td>
            </tr>
            <tr>
                <td align="center"><input type="submit" id="addsubmit" value="Add" class="btn btn-primary"></td>
                <td align="center"><input type="reset" id="reset-btn" value="Reset" class="btn btn-danger"></td>
            </tr>
        </table>
    </form>


    <% include ./partials/messages %>
</div>